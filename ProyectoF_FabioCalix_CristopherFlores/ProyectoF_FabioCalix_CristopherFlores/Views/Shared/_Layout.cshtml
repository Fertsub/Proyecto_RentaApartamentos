<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ResiCONTROL</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    @* Uncomment to use the HtmlEditor control *@
    <script src="https://unpkg.com/devextreme-quill@23_1/dist/dx-quill.min.js"></script>

    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")
    @RenderSection("Styles", required: false)
</head>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<body style="padding-top: 5rem;">

    <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-building-fill-door me-2" style="font-size:1.4rem;"></i>
                ResiCONTROL
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar"
                    aria-controls="navbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav nav-pills me-auto mb-2 mb-md-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="inmueblesDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="bi bi-house-door-fill me-1"></i> Inmuebles
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="inmueblesDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Apartamento","Home")">
                                    <i class="bi bi-building me-1"></i> Apartamentos
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Edificio","Home")">
                                    <i class="bi bi-columns-gap me-1"></i> Edificios
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="personasDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="bi bi-people-fill me-1"></i> Personas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="personasDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Arrendador","Home")">
                                    <i class="bi bi-person-badge me-1"></i> Arrendadores
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Arrendatario","Home")">
                                    <i class="bi bi-person-circle me-1"></i> Arrendatarios
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Garante","Home")">
                                    <i class="bi bi-shield-lock-fill me-1"></i> Garantes
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contrato","Home")">
                            <i class="bi bi-file-earmark-text-fill me-1"></i> Contratos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Factura","Home")">
                            <i class="bi bi-receipt-cutoff me-1"></i> Facturas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Pago","Home")">
                            <i class="bi bi-currency-dollar me-1"></i> Pagos
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="mantenimientoDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="bi bi-tools me-1"></i> Mantenimiento
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="mantenimientoDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Empleado_Mantenimiento","Home")">
                                    <i class="bi bi-person-workspace me-1"></i> Empleados
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Historial_Mantenimiento","Home")">
                                    <i class="bi bi-clock-history me-1"></i> Historial
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Solicitud_Mantenimiento","Home")">
                                    <i class="bi bi-wrench-adjustable me-1"></i> Solicitudes
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="solicitudesDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="bi bi-chat-left-dots me-1"></i> Solicitudes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="solicitudesDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Queja_Solicitud","Home")">
                                    <i class="bi bi-exclamation-diamond-fill me-1"></i> Quejas
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Solicitud_Mantenimiento","Home")">
                                    <i class="bi bi-tools me-1"></i> Mantenimiento
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>

</html>